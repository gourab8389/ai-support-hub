datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  engineType = "client"
}

enum UserRole {
  OWNER
  ADMIN
  AGENT
  MEMBER
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum MessageSender {
  AI
  AGENT
  CUSTOMER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  avatar        String?
  emailVerified Boolean   @default(false)
  verificationToken String?
  resetToken    String?
  resetTokenExpiry DateTime?
  googleId      String?   @unique
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  workspaces    WorkspaceMember[]
  tickets       Ticket[]
  messages      Message[]
  apiKeys       ApiKey[]
  
  @@index([email])
  @@index([googleId])
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  avatar      String?
  industry    String?
  
  // Widget settings
  widgetColor     String   @default("#6366f1")
  widgetPosition  String   @default("bottom-right")
  welcomeMessage  String   @default("Hi! How can we help you today?")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  members     WorkspaceMember[]
  knowledgeBase KnowledgeBase[]
  tickets     Ticket[]
  apiKeys     ApiKey[]
  analytics   Analytics[]
  
  @@index([slug])
}

model WorkspaceMember {
  id          String     @id @default(cuid())
  role        UserRole   @default(MEMBER)
  
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  joinedAt    DateTime   @default(now())
  
  @@unique([userId, workspaceId])
  @@index([userId])
  @@index([workspaceId])
}

model KnowledgeBase {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  category    String?
  tags        String[]
  
  // For AI embeddings & search
  embedding   String?  @db.Text
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([workspaceId])
  @@index([category])
}

model Ticket {
  id          String         @id @default(cuid())
  subject     String
  status      TicketStatus   @default(OPEN)
  priority    TicketPriority @default(MEDIUM)
  
  // Customer info
  customerName  String
  customerEmail String
  customerId    String?
  
  // Assignment
  assignedToId  String?
  assignedTo    User?         @relation(fields: [assignedToId], references: [id])
  
  workspaceId   String
  workspace     Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  // Relations
  messages      Message[]
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  resolvedAt    DateTime?
  
  @@index([workspaceId])
  @@index([status])
  @@index([customerEmail])
  @@index([assignedToId])
}

model Message {
  id          String        @id @default(cuid())
  content     String        @db.Text
  sender      MessageSender
  
  ticketId    String
  ticket      Ticket        @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  userId      String?
  user        User?         @relation(fields: [userId], references: [id])
  
  // For AI context
  isInternal  Boolean       @default(false)
  sentiment   String?
  
  createdAt   DateTime      @default(now())
  
  @@index([ticketId])
  @@index([userId])
}

model ApiKey {
  id          String    @id @default(cuid())
  name        String
  key         String    @unique
  lastUsedAt  DateTime?
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  
  @@index([key])
  @@index([workspaceId])
}

model Analytics {
  id              String   @id @default(cuid())
  
  // Metrics
  totalTickets    Int      @default(0)
  resolvedTickets Int      @default(0)
  avgResponseTime Int      @default(0) // in seconds
  aiResolutionRate Float   @default(0)
  customerSatisfaction Float @default(0)
  
  date            DateTime @default(now())
  
  workspaceId     String
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  @@unique([workspaceId, date])
  @@index([workspaceId])
  @@index([date])
}